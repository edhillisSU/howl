<div id="infoPanelContent">
  <div id="infoPanelTitle"><b>Recent Wildfire Perimeters</b></div>
  <div><small>(Click on a marker to view wildfire perimeter)</small></div>
  <div class="hline"></div>
  <div class="legend-box">
    <div class="legend-title">A note on this Spotlight</div>
    <div class="legend-entry" style="margin: 4px;">
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
    </div>
  </div>
  <div class="legend-box">
    <div class="legend-title">Select Year</div>
    <div class="legend-entry">
      {{#each fireYears}}
      <input class="fire-year" name="fire-year" value="{{this.year}}" type="radio"{{#if this.selected}} checked{{else}}{{#unless @index}} checked{{/unless}}{{/if}}> {{this.label}} &nbsp
      {{/each}}
    </div>
  </div>
  <div class="legend-box">
    <div class="legend-title"><span id="firesListed"></span> wildfires listed</div>
    <div class="legend-entry" style="text-align: left; margin-left: 4px;">
      <ul class="v-legend-items">
        {{#each listOfFires}}
        <li style="display: none;" class="v-legend-item-sel rcwildfires-list-item" data-fireYear="{{this.fireYear}}" data-fireFileName="{{this.fireFileName}}">{{this.fireName}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="infoPanelCredit">Data Source: <a href="https://www.geomac.gov/" target="_blank">GeoMAC</a></div>
</div>
